{% extends 'base.html.twig' %}

{% block body %}
    <post>
        <h2>{{ post.title }}</h2>
        <div class="metadata">
            Ecrit le {{ post.date | date('d/m/Y') }} à {{ post.date | date('H:i') }} dans la catégorie {{ post.category.title }}
        </div>
        <div class="content">
            <img src="{{ post.link }}" alt="">
            {{ post.content | raw }}
        </div>
    </post>

    <section id="commentaires">
        <h1>{{ post.comments | length }} commentaires :</h1>
        {% for comment in post.comments %}
        <div class="comment">
            <div class="row">
                <div class="col-3">
                    {{ comment.author }} (<small>{{ comment.date | date('d/m/Y à H:i')}}</small>)
                </div>
                <div class="col">
                    {{ comment.content | raw }}
                </div>
            </div>
        </div>
        {% endfor %}

        {% if app.user %}
        {{ form_start(commentForm) }}
        {{ form_row(commentForm.author, {'attr': {'placeholder': "Votre nom"}}) }}
        {{ form_row(commentForm.content, {'attr': {'placeholder': "Votre commentaire"}}) }}
        <button type="submit" class="btn btn-success">Commenter</button>
        {{ form_end(commentForm) }}
        {% else %}
            <h2>Connectez-vous pour commenter !</h2>
            <a href="{{ path('security_login') }}" class="btn btn-primary">Connexion</a>
        {% endif %}
    </section>
{% endblock %}