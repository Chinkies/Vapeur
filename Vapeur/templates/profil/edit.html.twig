{% extends 'base.html.twig' %}
{% block body %}
    <h1>Modifiez vos informations personnelles</h1>

    {{ form_start(form) }}
    {{ form_row(form.username, {'label': 'Nom d\'utilisateur','attr': {'placeholder': '-->Nom d\'utilisateur'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': '-->Nouveau mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmez votre mot de passe', 'attr': {'placeholder': '-->Répétez votre nouveau mot de passe'}}) }}

    <button type="submit" class="btn btn-success">Inscription</button>
    {{ form_end(form) }}
{% endblock %}